<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_padding_small"
    card_view:cardCornerRadius="@dimen/card_view_radius"
    card_view:cardElevation="@dimen/card_view_elevation">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


        <TextView
            android:id="@+id/member_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_padding_medium"
            android:textStyle="bold"
            android:textAppearance="@style/mainTitleStyle"
            tools:text="@string/member_name_default" />

        <TextView
            android:id="@+id/member_dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_large"
            android:gravity="center"
            android:textColor="@color/textColor"
            tools:text="@string/member_dob_default" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/separator_view_height"
        android:layout_marginTop="@dimen/margin_padding_large"
        android:background="@color/colorPrimaryDark"
        android:visibility="visible" />
</LinearLayout>
</android.support.v7.widget.CardView>