<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical"
    android:orientation="vertical"
    android:layout_marginTop="42dp"
    android:paddingBottom="42dp"
    >


    <Button
        android:id="@+id/to_do_btn"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:text="@string/to_do_button"
        android:textAllCaps="false"
        android:theme="@style/AppTheme.Buttons"
        />

    <Button
        android:id="@+id/appointment_btn"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:text="@string/appointments_button"
        android:textAllCaps="false"
        android:theme="@style/AppTheme.Buttons"
        />

    <Button
        android:id="@+id/contacts_btn"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:text="@string/important_contacts_button"
        android:textAllCaps="false"
        android:theme="@style/AppTheme.Buttons"
        />

    <Button
        android:id="@+id/family_members_btn"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:text="@string/family_members_button"
        android:textAllCaps="false"
        android:theme="@style/AppTheme.Buttons"
        />


</LinearLayout>

</ScrollView>
